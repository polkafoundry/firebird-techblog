datasource mysql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "mysql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model Admin {
  id            Int     @id @default(autoincrement())
  name          String  @default("")
  email         String  @unique @default("")
  password      String
  is_root_admin Boolean @default(false)
}

model Article {
  id                  Int               @id @default(autoincrement())
  is_display          Int               @default(0)
  status              ArticleStatusType
  thumbnail_filesize  Int?
  thumbnail_extension String?
  thumbnail_width     Int?
  thumbnail_height    Int?
  thumbnail_id        String?
  title               String            @default("")
  category            Category[]        @relation("Article_category")
  author_name         String            @default("")
  author_image        String            @default("")
  author_email        String            @default("")
  hashtags            String            @default("")
  is_exclusive        Boolean           @default(false)
  content             String?           @mysql.Text
  references          String?           @mysql.Text
  is_admin            Boolean           @default(false)
  created_at          DateTime?
  alias               String            @unique @default("")
}

model Category {
  id                    Int       @id @default(autoincrement())
  name                  String    @default("")
  from_Article_category Article[] @relation("Article_category")
}

model AMABanner {
  id     Int    @id @default(autoincrement())
  banner String @default("")
}

model Subscribe {
  id    Int    @id @default(autoincrement())
  email String @unique @default("")
}

enum ArticleStatusType {
  pending
  approved
  rejected
}